@{
  Layout ="_Layout";
}

@using ReadingNook.Models

<h1>Authors</h1>

@if(Model.Count == 0)
{
  <h3>You have no current authors</h3>
}

@foreach (Author author in Model)
{
  <p>@Html.ActionLink($"{author.Name}", "Details", new {id = author.AuthorId})</p>
}

<p>@Html.ActionLink("Add a New Author", "Create")</p>